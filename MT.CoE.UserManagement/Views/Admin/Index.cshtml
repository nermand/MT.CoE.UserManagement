@{
    ViewBag.Title = "Index";
}

<style type="text/css">
    .user-list  {
        display: block
    }
</style>

<h2>@ViewBag.Welcome</h2>
<div id="user">
    <ul title="Personal Details/ Info"></ul>
    <span>
        <input type="text" id="firstName" placeholder="First Name" />
        <input type="text" id="lastName" placeholder="Last Name" />
        <input type="date" id="dob" placeholder="Date of Birth" />
        <input type="text" id="address" placeholder="Address" />
        <input type="text" id="phone" placeholder="Phone No." />
        <input type="email" id="email" placeholder="Email address" />
    </span>
    <button id='back'>Back to user list</button>
</div>
<div id="user-list">
    <ul title="Users list"></ul>
    <button id='add'>Add New User</button>
</div>


<script type="text/javascript">
    (function ($) {
        $(function () {
            var adminView = new AdminView();
        });
    })(jQuery);
</script>

@*Always put knockout scripts on the end--DOM bindings must be set*@
<script src="@Url.Content("~/Scripts/lib/underscore.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/lib/backbone.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/app/model/User.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/app/collection/Users.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/app/view/AdminView.js")" type="text/javascript"></script>

@*Keep templates in a file*@
<script type="text/template" id="user_template">
    <li data-id="<%= user_id %>"><%= firstName %> | <%= lastName %> | <%= address %> | <%= birthDate %> | <%= email %> | <%= phoneNo %> <span class="delete" style="color:red; cursor:pointer">[delete]</span></li>
</script>
