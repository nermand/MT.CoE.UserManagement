@*Keep templates in a file*@
<script type="text/template" id="user_template">    
    <div class="basic" data-id="<%= userId %>">
        <div class="basicImg">
            <img class="basicImg" src="<%= picUrl %>" />
        </div>
        <div class="edit-user">
            <span class="basicTitle"><%= firstName %> <%= lastName %></span><br />
            <span class="basicDescription"><%= phoneNumber %></span><br />
            <span class="basicDescription"><%= description %></span><br />
            <span class="basicDescription"><%= companyName %></span><br />
            <br />
            <br />
            <span class="basicDescription">Address:</span><br />
            <span class="basicAddress"><%= address %></span><br />
            <span class="basicAddress"><%= postalCode %> <%= cityName %></span><br />
            <span class="basicAddress"><%= country %></span>
        </div>
    </div>
</script>